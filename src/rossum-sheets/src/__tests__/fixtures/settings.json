{
  "debug": false,
  "sheets": {
    "headers": {
      "columns": {
        "A": "=ROSSUM.DP(\"document_id\")",
        "B": "=ROSSUM.DP(\"order_id\")",
        "C": "=ROSSUM.DP(\"amount_due\")"
      },
      "formulas": [
        {
          "fx": "=SUM(A1,line_items!A1)",
          "target": "notes"
        },
        {
          "fx": "=A1",
          "target": "notes"
        },
        {
          "fx": "=A1>A2",
          "target": "notes",
          "ifTruthy": {
            "showInfo": "A1 is bigger than A2!"
          }
        }
      ]
    },
    "line_items": {
      "columns": {
        "A": "=ROSSUM.DP(\"item_quantity\")",
        "B": "=ROSSUM.DP(\"item_amount\")"
      },
      "formulas": [
        {
          "fx": "=ROW($A1)",
          "target": "item_description"
        },
        {
          "fx": "=SUM(A:B)",
          "target": "item_description"
        },
        {
          "fx": "=$A1*2",
          "target": "item_description"
        }
      ]
    },
    "tax_details": {
      "columns": {
        "A": "=ROSSUM.DP(\"tax_detail_rate\")"
      },
      "formulas": [
        {
          "fx": "=$A1*2",
          "target": "tax_detail_total"
        }
      ]
    },
    "meta": {
      "columns": {
        "A": "=ROSSUM.PAYLOAD(\"annotation.url\")",
        "B": "=ROSSUM.PAYLOAD(\"document.url\")"
      }
    }
  }
}
