{
  "debug": false,
  "sheets": {
    "headers": {
      "columns": {
        "A1": "document_id",
        "B1": "order_id",
        "C1": "amount_due"
      },
      "formulas": [
        {
          "fx": "=SUM(A1,line_items!A1)",
          "target": "notes"
        },
        {
          "fx": "=A1",
          "target": "notes"
        },
        {
          "fx": "=A1>A2",
          "target": "notes",
          "validation": {
            "type": "info",
            "message": "A1 is bigger than A2!"
          }
        }
      ]
    },
    "line_items": {
      "columns": {
        "$A1": "item_quantity",
        "$B1": "item_amount"
      },
      "formulas": [
        {
          "fx": "=ROW($A1)",
          "target": "item_description"
        },
        {
          "fx": "=SUM(A:B)",
          "target": "item_description"
        },
        {
          "fx": "=$A1*2",
          "target": "item_description"
        }
      ]
    },
    "tax_details": {
      "columns": {
        "$A1": "tax_detail_rate"
      },
      "formulas": [
        {
          "fx": "=$A1*2",
          "target": "tax_detail_total"
        }
      ]
    },
    "meta": {
      "columns": {
        "A1": "annotation.url",
        "B1": "document.url"
      }
    }
  }
}
