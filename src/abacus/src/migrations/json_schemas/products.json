{
  "message": "",
  "level": "strict",
  "rule": {
    "type": "object",
    "additionalProperties": false,
    "required": [
      "images",
      "unit_label",
      "is_published",
      "visibility",
      "created",
      "updated",
      "price",
      "translations"
    ],
    "properties": {
      "images": {
        "type": "array",
        "items": {
          "type": "object",
          "additionalProperties": false,
          "required": ["name_s3", "name_original", "blurhash"],
          "properties": {
            "name_s3": { "type": "string", "minLength": 1 },
            "name_original": { "type": "string", "minLength": 1 },
            "blurhash": { "type": "string", "minLength": 1 }
          }
        }
      },
      "unit_label": { "type": "string", "minLength": 1 },
      "is_published": { "type": "boolean" },
      "visibility": {
        "type": "array",
        "items": {
          "type": "string",
          "minLength": 1,
          "enum": ["POS", "ESHOP"]
        }
      },
      "created": { "type": "string", "minLength": 1 },
      "updated": { "type": "string", "minLength": 1 },
      "price": {
        "type": "object",
        "additionalProperties": false,
        "required": ["unit_amount", "unit_amount_currency"],
        "properties": {
          "unit_amount": {
            "type": "number"
          },
          "unit_amount_currency": {
            "type": "string",
            "minLength": 1,
            "enum": ["MXN"]
          }
        }
      },
      "translations": {
        "type": "array",
        "items": {
          "type": "object",
          "additionalProperties": false,
          "required": ["locale", "name", "description_slate"],
          "properties": {
            "locale": {
              "type": "string",
              "minLength": 1,
              "enum": ["en_US", "es_MX"]
            },
            "name": {
              "type": ["string"],
              "minLength": 1
            },
            "description_slate": {
              "type": ["string", "null"],
              "minLength": 1
            }
          }
        }
      }
    }
  }
}
