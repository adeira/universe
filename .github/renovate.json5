{
  extends: [
    ":ignoreModulesAndTests",
    "group:monorepos",
    "group:recommended",
    "replacements:all",
    "workarounds:all",
  ],
  rebaseWhen: "conflicted",
  prHourlyLimit: 0,
  prConcurrentLimit: 0,
  dependencyDashboard: true,
  labels: ["dependencies"],
  postUpdateOptions: ["yarnDedupeHighest"],
  rangeStrategy: "bump",
  semanticCommits: "disabled",
  updateInternalDeps: true,
  kubernetes: {
    managerFilePatterns: ["/src/abacus-kubernetes/.+\\.yaml$/"],
  },
  ignoreDeps: ["chalk", "strip-ansi"],
  packageRules: [
    {
      groupName: "Stylex packages (JavaScript)",
      matchPackageNames: ["/^@stylexjs\\//"],
    },
    {
      groupName: "SVGR packages (JavaScript)",
      matchPackageNames: ["/^@svgr\\//"],
    },
    {
      groupName: "cert-manager packages (K8s)",
      matchPackageNames: ["/^quay\\.io\\/jetstack\\/cert-manager-/"],
    },
    {
      groupName: "ingress-nginx packages (K8s)",
      matchPackageNames: ["/^k8s\\.gcr\\.io\\/ingress-nginx\\//"],
    },
    {
      groupName: "Clap packages (Rust)",
      matchSourceUrls: ["https://github.com/clap-rs/clap{/,}**"],
    },
    {
      groupName: "FBT packages (JavaScript)",
      matchSourceUrls: ["https://github.com/facebook/fbt{/,}**"],
    },
    {
      groupName: "Relay packages (JavaScript)",
      matchSourceUrls: ["https://github.com/facebook/relay{/,}**"],
    },
    {
      groupName: "Hermes packages",
      matchSourceUrls: ["https://github.com/facebook/hermes{/,}**"],
    },
    {
      groupName: "Rusoto packages (Rust)",
      matchSourceUrls: ["https://github.com/rusoto/rusoto{/,}**"],
    },
    {
      groupName: "Sentry packages (Rust)",
      matchSourceUrls: ["https://github.com/getsentry/sentry-rust{/,}**"],
    },
  ],
}
