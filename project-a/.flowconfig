[ignore]
<PROJECT_ROOT>/\.git/.*


[include]


[libs]
./flow-typed/


[lints]
all=error
ambiguous-object-type=off
sketchy-null-bool=off
unclear-type=off
untyped-import=off


[options]
facebook.fbt=FbtWithoutString
types_first=true
module.ignore_non_literal_requires=true

; TODO: this is probably not a good idea (because of Universe)
module.name_mapper='^src' ->'<PROJECT_ROOT>/src'


[strict]
ambiguous-object-type
sketchy-null-bool
unclear-type
untyped-import


[declarations]
.+/node_modules/.+
