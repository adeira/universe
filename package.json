    "@babel/eslint-parser": "^7.17.0",
    "babel-jest": "^27.5.1",
    "babel-loader": "^8.2.3",
    "eslint": "^8.10.0",
    "eslint-formatter-codeframe": "^7.32.1",
    "flow-bin": "^0.173.0",
    "glob": "^7.2.0",
    "jest": "^27.5.1",
    "jest-runner-eslint": "^1.0.0"
  },
  "jest": {
    "testRegex": "/scripts/jest/dontRunJestDirectly\\.js$"
