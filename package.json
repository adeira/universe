{
  "private": true,
  "workspaces": [
    "scripts",
    "src/*"
  ],
  "engines": {
    "yarn": ">=1.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@adeira/babel-preset-adeira": "^0.4.0",
    "@adeira/eslint-config": "^2.2.0",
    "@adeira/flow-bin": "^0.2.0",
    "@babel/core": "^7.10.2",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.1",
    "babel-loader": "^8.1.0",
    "eslint": "^7.2.0",
    "flow-bin": "^0.126.1",
    "flow-typed": "^3.1.0",
    "glob": "^7.1.6",
    "jest": "^26.0.1"
  },
  "jest": {
    "testRegex": "/scripts/jest/dontRunJestDirectly\\.js$"
  },
  "scripts": {
    "//": [
      "Please do not add new scripts here. Use scripts section in your workspace instead."
    ],
    "lint": "eslint --config=.eslintrc.js --print-config=babel.config.js | yarn run eslint-config-prettier-check && yarn run jest --config=.jest-eslint.config.js",
    "scanner": "yarn run jest --config src/monorepo-scanner/.jest.config.js",
    "test": "yarn run typecheck && yarn run lint && yarn run test-only --ci --colors",
    "test-only": "BABEL_TYPES_8_BREAKING=true yarn run monorepo-babel-node src/monorepo-utils/bin/monorepo-run-tests.js",
    "typecheck": "yarn run adeira-flow-bin"
  },
  "resolutions": {
    "eslint": "~7.2.0"
  }
}
