{
  "private": true,
  "workspaces": [
    "scripts",
    "src/*"
  ],
  "engines": {
    "yarn": ">=1.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@adeira/babel-preset-adeira": "^1.0.0",
    "@adeira/eslint-config": "^3.1.0",
    "@adeira/eslint-runner": "^0.2.0",
    "@adeira/flow-bin": "^0.3.0",
    "@babel/core": "^7.11.5",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.3.0",
    "babel-loader": "^8.1.0",
    "eslint": "^7.8.0",
    "flow-bin": "^0.132.0",
    "glob": "^7.1.6",
    "jest": "^26.4.2"
  },
  "jest": {
    "testRegex": "/scripts/jest/dontRunJestDirectly\\.js$"
  },
  "scripts": {
    "//": [
      "Please do not add new scripts here. Use scripts section in your workspace instead."
    ],
    "lint": "eslint --config=.eslintrc.js --print-config=babel.config.js | yarn run eslint-config-prettier-check && yarn run prettier --check \"src/**/*.md\" && yarn run jest --config=.jest-eslint.config.js",
    "scanner": "yarn run jest --config src/monorepo-scanner/.jest.config.js",
    "test": "yarn run typecheck && yarn run lint && yarn run test-only --ci --colors && yarn run scanner",
    "test-only": "BABEL_TYPES_8_BREAKING=true yarn run monorepo-babel-node src/monorepo-utils/bin/monorepo-run-tests.js",
    "typecheck": "yarn run adeira-flow-bin"
  },
  "resolutions": {
    "graphql": "^15.0.0"
  }
}
